{
	"extends": "./.denoTypes/tsconfig.json",
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "esnext"],
		"target": "esnext",
		"checkJs": true,
		"module": "esnext",
		"useDefineForClassFields": true,
		"strict": true,
	},
	"include": [
		"src/**/*.js",
		"src/**/*.ts",
		"scripts/**/*.js",
		"scripts/**/*.ts",
		"test/**/*.js",
		"test/**/*.ts",
	]
}
